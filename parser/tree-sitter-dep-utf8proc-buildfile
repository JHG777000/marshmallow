project := "tree-sitter-dep-utf8proc".

project_version := "1.0.0".

buildfile_version := "1.0".

url_to_src := "https://github.com/JuliaStrings/utf8proc/archive/d81308faba0cfb3fccf8c3b12446863c7b76ae32.zip".

build tree_sitter_dep_utf8proc.

 options.

  on toolchain_select("-s", "--select_toolchain=tool", "Select toolchain.").

 end options.

 get toolchain_select.

 if ( toolchain_select == nil ).

  var toolchain_select := "clang".

 end if.

 files Files("utf8proc.c").

 sources Source(Files).

 make filepath include_path from "resources" to "".

 compiler CompilerFlags("-Wall", "-I " + include_path).

 toolchain ToolChain(toolchain_select,CompilerFlags).

 output tree_sitter_dep_utf8proc_lib("library",Source,ToolChain).

end build.

build clean_build.

 message("Cleaning tree-sitter-dep-utf8proc...").

 clean("build").

end build.

default tree_sitter_dep_utf8proc.
